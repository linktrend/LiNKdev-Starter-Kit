# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Required: Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional: GitHub OAuth for local Supabase dev
SUPABASE_AUTH_EXTERNAL_GITHUB_REDIRECT_URI="http://127.0.0.1:54321/auth/v1/callback"
SUPABASE_AUTH_EXTERNAL_GITHUB_CLIENT_ID=
SUPABASE_AUTH_EXTERNAL_GITHUB_SECRET=

# =====================================================
# STRIPE CONFIGURATION
# =====================================================
# Required: Get these from your Stripe dashboard
# Use test keys for development (sk_test_..., pk_test_...)
# Use live keys for production (sk_live_..., pk_live_...)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Required: Stripe Price IDs for each plan
# Create these in Stripe Dashboard -> Products
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_PRO_MONTHLY=price_1234_pro_monthly
STRIPE_PRICE_PRO_ANNUAL=price_1234_pro_annual
STRIPE_PRICE_BUSINESS_MONTHLY=price_1234_business_monthly
STRIPE_PRICE_BUSINESS_ANNUAL=price_1234_business_annual
STRIPE_PRICE_ENTERPRISE=price_1234_enterprise

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
# Optional: Used for redirects and email links
# Defaults to localhost:3000 in development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
