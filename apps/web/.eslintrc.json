{
  "extends": [
    "next/core-web-vitals",
    "eslint-config-prettier"
  ],
  "rules": {
    "no-restricted-syntax": [
      "warn",
      {
        "selector": "Literal[value=/^#([0-9a-fA-F]{3}){1,2}$/]",
        "message": "Use tokens via @starter/ui/Tailwind. No raw hex in app code."
      }
    ]
  }
}
