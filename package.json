{
  "name": "ltm-starter-kit",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter ./apps/web dev",
    "dev:mobile": "pnpm --filter ./apps/mobile dev",
    "build": "pnpm --filter web build",
    "lint": "pnpm --filter web lint",
    "test": "pnpm --filter web test",
    "typecheck": "pnpm --filter web typecheck",
    "verify:web": "pnpm --filter ./apps/web verify",
    "test:web": "pnpm --filter ./apps/web test",
    "e2e:web": "pnpm --filter ./apps/web e2e",
    "test:mobile": "pnpm --filter ./apps/mobile test",
    "release:alpha": "pnpm build && echo 'Release tag creation TBD'"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@heilgar/shadcn-ui-mcp-server": "^1.0.6",
    "@playwright/test": "^1.55.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "eslint-plugin-react-hooks": "4.6.0",
      "@types/react": "$@types/react",
      "@types/react-dom": "$@types/react-dom",
      "react": "$react",
      "react-dom": "$react-dom"
    }
  }
}
